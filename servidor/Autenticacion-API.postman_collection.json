{
    "info": {
        "_postman_id": "login-api-collection",
        "name": "Sistema de Asistencia - Autenticación",
        "description": "Endpoints de autenticación del sistema de asistencia",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Login",
            "item": [
                {
                    "name": "Login con credenciales",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "// Guardar tokens en variables de Postman",
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.environment.set('accessToken', jsonData.backendTokens.accessToken);",
                                    "    pm.environment.set('refreshToken', jsonData.backendTokens.refreshToken);",
                                    "    pm.environment.set('userId', jsonData.user.id);",
                                    "    console.log('✓ Tokens guardados');",
                                    "    pm.test('Login exitoso', function () {",
                                    "        pm.expect(pm.response.code).to.equal(200);",
                                    "        pm.expect(jsonData.user).to.have.property('id');",
                                    "        pm.expect(jsonData.user).to.have.property('email');",
                                    "        pm.expect(jsonData.backendTokens).to.have.property('accessToken');",
                                    "        pm.expect(jsonData.backendTokens).to.have.property('refreshToken');",
                                    "    });",
                                    "}",
                                    "else {",
                                    "    pm.test('Error en login', function () {",
                                    "        pm.expect(pm.response.code).to.not.equal(200);",
                                    "    });",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123456\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/users/login/credentials",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "users",
                                "login",
                                "credentials"
                            ]
                        },
                        "description": "Login con email y contraseña"
                    },
