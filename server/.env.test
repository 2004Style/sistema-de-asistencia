# ============================================
# CONFIGURACIÓN DE PRUEBAS (Testing)
# ============================================
# Este archivo contiene credenciales para tests en desarrollo
# NO usar en producción

# ============================================
# BASE DE DATOS
# ============================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/test_db

# ============================================
# CONFIGURACIÓN DE LA API
# ============================================
HOST=0.0.0.0
PORT=8000
TIMEZONE=America/Lima

# ============================================
# AMBIENTE Y DEBUG
# ============================================
# En desarrollo: AUTO_MIGRATE=true, DEBUG=true
# En producción: se sobrescriben a AUTO_MIGRATE=false, DEBUG=false en docker-compose-production.yml
AUTO_MIGRATE=true
DEBUG=true

# ============================================
# SEGURIDAD JWT
# ============================================
# ⚠️ CAMBIAR EN PRODUCCIÓN
SECRET_KEY=test-secret-key-do-not-use-in-production
JWT_SECRET_KEY=test-jwt-secret-key-do-not-use-in-production

# ============================================
# CONFIGURACIÓN DE ARCHIVOS
# ============================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=recognize/data
REPORTS_DIR=public/reports
TEMP_DIR=public/temp
PASSWORD_MIN_LENGTH=8

# ============================================
# CONFIGURACIÓN DE EMAIL (Mail API)
# ============================================
MAIL_API_URL=http://localhost:3001
MAIL_API_CLIENT_ID=test-client-id
MAIL_API_SECRET=test-secret
SMTP_FROM_EMAIL=test@example.com
SMTP_FROM_NAME=Test System

# ============================================
# ALERTAS Y UMBRALES
# ============================================
TARDANZAS_MAX_ALERTA=3
FALTAS_MAX_ALERTA=2
MINUTOS_TARDANZA=15
