# Archivo de ejemplo .env.local
# Copia esto a .env.local y personaliza los valores

# DESARROLLO - Servidor (FastAPI)
# Puerto: 8000

# Base de datos (local o remota)
DATABASE_URL=postgresql://usuario:contraseña@localhost:5432/asistencia_dev

# CORS - Permitir cliente
ALLOWED_ORIGINS=http://localhost:3000,http://IP_CLIENTE:3000

# API
DEBUG=True
ENV=development

# JWT
SECRET_KEY=tu-secret-development
ALGORITHM=HS256

# Email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-contraseña
